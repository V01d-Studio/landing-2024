---
import { Image } from "astro:assets";
const what = [
  {
    icon: "/icons/web.svg",
    title: "Web apps",
    description:
      "We build websites and web applications using modern technologies and best practices.",
  },
  {
    icon: "/icons/design.svg",
    title: "UI/UX design",
    description:
      "We design beautiful and functional user interfaces for web and mobile applications.",
  },
  {
    icon: "/icons/blockchain.svg",
    title: "Blockchain & dApps",
    description:
      "We build decentralized applications (dApps) on the Ethereum blockchain.",
  },
  {
    icon: "/icons/ai.svg",
    title: "AI & ML",
    description:
      "We build AI and ML solutions to help you automate your business processes.",
  },
];
---

<div
  class="w-screen flex flex-col justify-center min-h-screen p-8 md:p-16 lg:p-24 relative"
>
  <h2 class="w-full text-center">What we do</h2>
  <div
    class="grid sm:grid-cols-1 md:grid-cols-2 grid-flow-row gap-12 mt-16 lg:mt-36"
  >
    {
      what.map((x) => (
        <div class="flex border-2 border-midnight items-center px-3 py-6">
          {x.icon && (
            <Image
              src={x.icon}
              alt="Web apps"
              width={80}
              height={80}
              class="mr-4"
            />
          )}
          <div class="flex-1">
            <h3 class="text-xl mb-4">{x.title}</h3>
            <p class="text-sm">{x.description}</p>
          </div>
        </div>
      ))
    }
  </div>
</div>
